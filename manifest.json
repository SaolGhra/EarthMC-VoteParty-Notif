{
  "manifest_version": 3,
  "name": "EarthMC VoteParty Notifier",
  "version": "1.2.0",
  "description": "Get notified at different milestones of the Vote Party on EarthMC",
  "permissions": ["notifications", "alarms"],
  "host_permissions": ["https://api.earthmc.net/*"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "images/icon128.png"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
